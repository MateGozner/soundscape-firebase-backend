{
  "name": "soundscape-firebase-functions",
  "description": "Cloud Functions for SoundScape Backend",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "firebase emulators:start --only functions",
    "start": "npm run build && functions-framework --target=http --runtime=nodejs18",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "deploy": "firebase deploy --only functions",
    "deploy:dev": "firebase use development && firebase deploy --only functions",
    "deploy:prod": "firebase use production && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "logs:follow": "firebase functions:log --follow"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.4.1",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "firebase-functions-test": "^3.1.0"
  }
}
