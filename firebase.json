{
  "firestore": {
    "rules": "security/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  },
  "storage": [
    {
      "bucket": "soundscape-dev.appspot.com",
      "rules": "storage/storage.rules"
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
